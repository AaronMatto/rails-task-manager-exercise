<h1> Displaying All Tasks </h1>
<ul>
  <% @tasks.each do |task| %>
  <li> <%= task.title %> <%= link_to 'See details', task_path(task) %> <%= link_to 'Edit Task', edit_task_path(task) %> <%= link_to 'Delete Task', delete_task_path(task), method: :delete, data: { confirm: 'Do you really want to?' } %></li>
  <% end %>
</ul>
<%= link_to 'Create A Task', tasks_new_path %>
